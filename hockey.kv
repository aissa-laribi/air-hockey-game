#:kivy 1.0.9
#:import hex kivy.utils.get_color_from_hex

<Slot>:
    size: 5, 200
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
<HockeyPaddle>:
    size: 100, 100
    canvas:
        Ellipse:
            source: "game-images/paddle.jpg"
            pos: self.pos
            size: self.size


<HockeyBall>:
    size: 75, 75
    canvas:
        Ellipse:
            pos: self.pos
            source: "ball.jpg"
            size:self.size


            

<HockeyGame>:
    ball: hockey_ball
    player1: player_left
    player2: player_right


    canvas:
        Color:
            rgba: hex('#0b04a8e8')
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgb: (2, 1, 1)
        Rectangle:
            pos: self.center_x - 8, 0
            size: 25, self.height
        Ellipse:
            size: 250, 250
            pos: self.center_x - 120, 240
            
        Color:
            rgba: hex('#0b04a8e8')
        Ellipse:
            size: 200, 200
            pos: self.center_x - 95, 265
    Label:
        font_size : 70
        center_x: root.width / 4
        text: "0"
        top: root.top -50
        text: str(root.player1.score)

    Label:
        font_size : 70
        center_x: root.width * 3/4
        text: "0"
        top: root.top -50
        text: str(root.player2.score)

    HockeyBall:
        id: hockey_ball
        center: self.parent.center

    HockeyPaddle:
        id: player_left
        x: root.x
        center_y: root.center_y
        
    HockeyPaddle:
        id: player_right
        x: root.width - self.width
        center_y: root.center_y 

    Slot:
        
        x: root.x
        center_y: root.center_y
        
    Slot:
        
        x: root.width - self.width
        center_y: root.center_y

        
            
